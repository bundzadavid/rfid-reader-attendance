@using Newtonsoft.Json
@model IEnumerable<AttendanceStatsModel>

@{
    ViewData["Title"] = "Attendance Statistics";
    var stats = Model.ToList();
}

<div class="container-fluid mt-5 px-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold">📊 Attendance Statistics</h1>
            <p class="text-muted">Visual analysis of attendance patterns</p>
        </div>
        <div>
            <a asp-controller="Attendance" asp-action="Process" class="btn btn-success me-2">
                ⚙️ Recalculate Stats
            </a>
            <a asp-controller="Attendance" asp-action="Read" class="btn btn-outline-info me-2">
                📋 View Raw Data
            </a>
            <a asp-controller="Attendance" asp-action="Index" class="btn btn-lg btn-outline-secondary">
                ← Back to Home
            </a>
        </div>
    </div>

    @if (!stats.Any())
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <strong>ℹ️ No statistics available</strong> - Please process data first.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row g-3 mb-5">
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Total People</h5>
                        <h2 class="text-primary fw-bold">@stats.Count()</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Total Records</h5>
                        <h2 class="text-success fw-bold">@stats.Sum(s => s.TotalRecords)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Avg Arrival</h5>
                        <h2 class="text-info fw-bold">
                            @{
                                var avgArrival = stats.Where(s => s.AverageArrivalTime.HasValue)
                                                     .Average(s => s.AverageArrivalTime.Value.TotalMinutes);
                                var hours = (int)avgArrival / 60;
                                var minutes = (int)avgArrival % 60;
                            }
                            @($"{hours:D2}:{minutes:D2}")
                        </h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Avg Departure</h5>
                        <h2 class="text-warning fw-bold">
                            @{
                                var avgDeparture = stats.Where(s => s.AverageDepartureTime.HasValue)
                                                       .Average(s => s.AverageDepartureTime.Value.TotalMinutes);
                                var hoursD = (int)avgDeparture / 60;
                                var minutesD = (int)avgDeparture % 60;
                            }
                            @($"{hoursD:D2}:{minutesD:D2}")
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Table -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white">
                <h5 class="card-title mb-0">📋 Detailed Statistics</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center">👤 Person Name</th>
                                <th class="text-center">🕐 Avg Arrival</th>
                                <th class="text-center">🕑 Avg Departure</th>
                                <th class="text-center">⏱️ Duration</th>
                                <th class="text-center">📈 Total Records</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var record in stats)
                        {
                            <tr>
                                <td class="fw-bold align-middle">@record.PersonName</td>
                                <td class="text-center align-middle">
                                    <span class="badge bg-success fs-6">
                                        @if (record.AverageArrivalTime.HasValue)
                                        {
                                            var h = (int)record.AverageArrivalTime.Value.TotalMinutes / 60;
                                            var m = (int)record.AverageArrivalTime.Value.TotalMinutes % 60;
                                            @($"{h:D2}:{m:D2}")
                                        }
                                        else
                                        {
                                            @("N/A")
                                        }
                                    </span>
                                </td>
                                <td class="text-center align-middle">
                                    <span class="badge bg-info fs-6">
                                        @if (record.AverageDepartureTime.HasValue)
                                        {
                                            var h = (int)record.AverageDepartureTime.Value.TotalMinutes / 60;
                                            var m = (int)record.AverageDepartureTime.Value.TotalMinutes % 60;
                                            @($"{h:D2}:{m:D2}")
                                        }
                                        else
                                        {
                                            @("N/A")
                                        }
                                    </span>
                                </td>
                                <td class="text-center align-middle">
                                    <span class="badge bg-secondary fs-6">
                                        @if (record.AverageArrivalTime.HasValue && record.AverageDepartureTime.HasValue)
                                        {
                                            var duration = record.AverageDepartureTime.Value - record.AverageArrivalTime.Value;
                                            var dh = (int)duration.TotalHours;
                                            var dm = (int)duration.TotalMinutes % 60;
                                            @($"{dh}h {dm}m")
                                        }
                                        else
                                        {
                                            @("N/A")
                                        }
                                    </span>
                                </td>
                                <td class="text-center align-middle">
                                    <span class="badge bg-warning text-dark fs-6">@record.TotalRecords</span>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0,0,0,0.15) !important;
    }
    .display-5 {
        color: #2c3e50;
        font-weight: 700;
    }
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>