<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperReklama</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cvicenie_mvc.styles.css" asp-append-version="true" />
    <style>
        .navbar-dark-custom {
            background-color: #000 !important;
            padding: 1rem 0 !important;
        }
        .navbar-brand-custom {
            font-size: 2rem;
            font-weight: bold;
            padding: 0.5rem 1rem !important;
        }
        .navbar-brand-custom .brand-super {
            color: #fff;
        }
        .navbar-brand-custom .brand-reklama {
            color: #dc3545;
        }
        .navbar-dark-custom .nav-link {
            color: #fff !important;
            transition: all 0.3s ease;
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem !important;
            font-weight: 500;
        }
        .navbar-dark-custom .nav-link:hover {
            color: #dc3545 !important;
            text-shadow: 0 0 8px rgba(220, 53, 69, 0.5);
            transform: scale(1.05);
        }
        .navbar-dark-custom .navbar-toggler {
            border-color: #fff;
            padding: 0.5rem 0.75rem;
        }
        .navbar-dark-custom .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23fff' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand navbar-brand-custom" asp-area="" asp-controller="Attendance" asp-action="Index">
                    <span class="brand-super">Super</span><span class="brand-reklama">Reklama</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Index">
                                🏠 Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Read">
                                📋 View Attendance
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Stats">
                                📊 Attendance Summary
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Visualization">
                                ⏱️ Average Time at Work
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - <strong>SuperReklama</strong> - All Rights Reserved
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
